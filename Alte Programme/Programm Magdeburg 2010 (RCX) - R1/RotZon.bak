         }
         else
         {
          OnRev(OUT_AB);
          Wait(20);
          //rechts
          OnFwd(OUT_A);
          OnRev(OUT_B);
          Wait(270);
         }
       }
       //------------------------------------------------------------------------------Silber gefunden
       if(schwarz1 || schwarz3)
       {
         OnRev(OUT_AB);
         Wait(150);
         OnFwd(OUT_B);
         OnRev(OUT_A);
         Wait(150);
       }
       if(silber1 && silber3)
       {
        OnRev(OUT_AB);
        Wait(150);
        OnFwd(OUT_B);
        OnRev(OUT_A);
        Wait(150);                                         //Kurve links-----100
       }
       }
       }
     }

}

